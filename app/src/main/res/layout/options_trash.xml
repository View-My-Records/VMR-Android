<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btnInfo"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:drawable/menuitem_background"
        android:clickable="true"
        android:longClickable="true">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/infoImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/infoImageView"
            android:clickable="false"
            android:longClickable="false"
            android:maxLines="1"
            android:text="Info"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/infoImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:clickable="false"
            android:contentDescription="Info"
            android:longClickable="false"
            android:src="@drawable/ic_info_black_24dp" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:alpha="150"
        android:background="#000000" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:behavior_peekHeight="400dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/btnOpen"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/menuitem_background"
                android:clickable="true"
                android:longClickable="true">

                <ImageView
                    android:id="@+id/openImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="6dp"
                    android:clickable="false"
                    android:contentDescription="Open"
                    android:longClickable="false"
                    android:src="@drawable/ic_open_black_24dp"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/openImageView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/openImageView"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="Open"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnRestore"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/menuitem_background"
                android:clickable="true">
                <ImageView
                    android:id="@+id/restoreImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    android:contentDescription="Restore"
                    android:longClickable="false"
                    android:src="@drawable/ic_restore_black_24dp"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/restoreImageView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/restoreImageView"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="Restore"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnProperties"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/menuitem_background"
                android:clickable="true">
                <ImageView
                    android:id="@+id/propertiesImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    android:contentDescription="Properties"
                    android:longClickable="false"
                    android:src="@drawable/ic_info_black_24dp"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/propertiesImageView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/propertiesImageView"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="Properties"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/menuitem_background"
                android:clickable="true">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:alpha="150"
                    android:background="#000000" />
                <ImageView
                    android:id="@+id/deleteImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    android:contentDescription="Delete"
                    android:longClickable="false"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/deleteImageView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/deleteImageView"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="Delete"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>